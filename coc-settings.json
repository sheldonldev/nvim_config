{
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.showHiddenFiles": true,
  "explorer.keyMappings.global": {
    "i": false,

    "<tab>": "actionMenu",
    "?": "help",

    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "s": "open:split",
    "t": "open:tab",

    "%": "addFile",
    "d": "addDirectory",
    "R": "rename",
    "D": "delete",
    "dF": "deleteForever",

    "h": ["wait", "collapse"],
    "l": ["wait", "expandable?", "expand", "open"],
    "gl": ["wait", "expand:recursive"],
    "gh": ["wait", "collapse:recursive"],
    "<bs>": ["wait", "gotoParent"],

    "*": "toggleSelection",
    "J": ["wait", "toggleSelection", "normal:j"],
    "K": ["wait", "toggleSelection", "normal:k"],
    "gk": ["wait", "expandablePrev"],
    "gj": ["wait", "expandableNext"],

    "pc": "preview:content",
    "pl": "preview:labeling",

    "yp": "copyFilepath",
    "yn": "copyFilename",
    "yy": "copyFile",
    "dd": "cutFile",
    "p": "pasteFile",

    "g.": "toggleHidden",
    "r": "refresh",

    "q": "quit",
    "<esc>": "esc",
    "<c-c>": "esc",
    "X": "systemExecute",

    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": ["wait", "sourcePrev"],
    "]]": ["wait", "sourceNext"],

    "[i": ["wait", "indentPrev"],
    "]i": ["wait", "indentNext"],

    "[m": ["wait", "markPrev:modified"],
    "]m": ["wait", "markNext:modified"],

    "[d": ["wait", "markPrev:diagnosticError:diagnosticWarning"],
    "]d": ["wait", "markNext:diagnosticError:diagnosticWarning"],
    "[D": ["wait", "markPrev:diagnosticError"],
    "]D": ["wait", "markNext:diagnosticError"],

    "[c": ["wait", "markPrev:git"],
    "]c": ["wait", "markNext:git"],
    "<<": "gitStage",
    ">>": "gitUnstage"
  },

  "coc.source.emoji.triggerCharacters": [":"],
  "coc.source.emoji.filetypes": ["markdown", "html", "vue"],

  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },

  "diagnostic.refreshAfterSave": true,
  "diagnostic.level": "warning",
  "diagnostic.messageTarget": "echo",

  "eslint.enable": true,
  "eslint.quiet": true,
  "eslint.packageManager": "yarn",
  "eslint.run": "onSave",
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "eslint.options": { "configFile": ".eslintrc.json" },
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "typscript.tsx",
    "vue"
  ],

  "prettier.requireConfig": false,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.trailingComma": "all",
  "prettier.arrowParens": "avoid",
  "prettier.htmlWhitespaceSensitivity": "strict",
  "prettier.disableLanguages": [],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "typescript.tsx",
    "vue",
    "json",
    "css",
    "markdown",
    "html",
    "vim"
  ],

  "tsserver.enable": true,
  "tsserver.formatOnType": false,
  "tsserver.enableJavascript": true,
  "tsserver.reportStyleChecksAsWarnings": false,
  "typescript.format.enabled": true,
  "typescript.preferences.quoteStyle": "double",
  "javascript.format.enabled": true,
  "javascript.preferences.quoteStyle": "double",

  "vetur.format.defaultFormatterOptions": {
    "prettyhtml": {
      "sortAttributes": true
    }
  },
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "vetur.format.defaultFormatter.ts": "prettier-tslint",
  "vetur.completion.autoImport": true,

  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets"
}
