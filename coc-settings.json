{
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "markdown",
        "php"
      ],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },
  "diagnostic.level": "warning",
  "diagnostic.messageTarget": "echo",
  "html.format.enable": true,
  "html.format.indentInnerHtml": true,
  "html.autoClosingTags": true,
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "blade",
    "javascript",
    "javascriptreact"
  ],
  "tsserver.enable": true,
  "tsserver.enableJavascript": true,
  "typescript.format.enabled": true,
  "typescript.preferences.quoteStyle": "double",
  "javascript.format.enabled": true,
  "javascript.preferences.quoteStyle": "double",
  "vetur.format.defaultFormatterOptions": {
    "prettyhtml": {
      "sortAttributes": true
    }
  },
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.completion.autoImport": true,
  "coc.source.emoji.filetypes": [
    "markdown",
    "html",
    "vue"
  ],
  "coc.source.emoji.triggerCharacters": [
    "?"
  ],

  "snippets.userSnippetsDirectory": "~/.vim/snips",
  "snippets.extends": {"javascriptreact":["javascript"]}
}
